
@{
    ViewData["Title"] = "Hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Hdmb
<style>
    .text-box-hdmb {
        height: 30px;
        position: relative;
        min-height: 1px;
        float: left;
        padding-right: 10px;
        padding-left: 10px;
        font-size: small;
        color: black;
    }
</style>

<div class="right_col" role="main">
    <div class="row">
        @{
            if (TempData["alertMessage"] != null)
            {
                <div style="color:red;font-size:30px">
                    @TempData["alertMessage"].ToString()
                </div>
            }
        }
        <div class="col-md-12 col-sm-12 ">
            <div class="col-md-3 col-sm-3" style="height:auto" id="leftdiv">

                @{
                    DateTime now = DateTime.Now;
                    var startDate = new DateTime(now.Year, now.Month, 1);
                    var endDate = startDate.AddMonths(1).AddDays(-1);
                    var filterValue = new object[] { new object[] { "Ngaylam", FilterBuilderFieldFilterOperations.Between, new object[] { startDate, endDate } } };
                }
                @(Html.DevExtreme().SelectBox()
                                    .DataSource(new JS("LOAIHD"))
                                    .DisplayExpr("name")
                                    .ValueExpr("id")
                                    .Value("ALL")
                                    .OnValueChanged(@<text>
                                        function(data) {
                                            var dataGrid = $("#HopDong_dataGrid").dxDataGrid("instance");
                                            if (data.value == "ALL")
                                                dataGrid.clearFilter();
                                            else
                                                dataGrid.filter(["MuaBan", "=", data.value]);
                                        }
                                    </text>)
                                )
                @(Html.DevExtreme().DataGrid<Hdmb>().ID("HopDong_dataGrid")
                                    .DataSource(ds => ds.Mvc()
                                        .Controller("HopDong")
                                        .LoadAction("LoadHopDong")
                                        .Key("Systemref")
                                    )
                                    .RemoteOperations(true)
                                    .Columns(columns => {

                                        columns.AddFor(m => m.Systemref).Caption("Systemref");

                                        columns.AddFor(m => m.Sohd).Caption("Số HĐ");

                                        columns.AddFor(m => m.Ngaylam).Visible(false).SortOrder(SortOrder.Asc);

                                        columns.AddFor(m => m.MuaBan).Visible(false);

                                    })
                                    .FilterPanel(e => e.Visible(true))
                                    .FilterValue(filterValue)
                                    .FilterBuilderPopup(p =>
                                        p.Position(pos =>
                                            pos.At(HorizontalAlignment.Center, VerticalAlignment.Top)
                                                .My(HorizontalAlignment.Center, VerticalAlignment.Top)
                                                .Offset(0, 10)
                                        )
                                    )
                                    .ColumnAutoWidth(true)
                                    .OnSelectionChanged("Hdmb_Selection")
                                    .Selection(s => s.Mode(SelectionMode.Single))
                                    .HoverStateEnabled(true)
                                    .FilterRow(filter => filter.Visible(true).ApplyFilter(GridApplyFilterMode.Auto))
                                    .HeaderFilter(hearder => hearder.Visible(true))
                                    .AllowColumnResizing(true)
                                    .AllowColumnReordering(true)
                                    .ShowBorders(true)
                                    .Grouping(group => group.AutoExpandAll(true))
                                    .Paging(paging => paging.PageSize(18))
                                )


            </div>
            <div class="col-md-9 col-sm-9" id="rightdiv" style="height:auto;min-height:auto">
                <form id="Form_Hdmb" method="post">
                    <div class="form-group row" style="margin-bottom:0px">
                        <div class="col-md-8 col-sm-8" style="border: 1px solid; border-color: black;text-align:center">
                            <label class="col-form-label col-md-2 col-sm-2">Mã ĐV</label>
                            <input type="text" class="form-control col-md-4 col-sm-4 text-box-hdmb" asp-for="Macn" disabled>
                            <label class="col-form-label col-md-2 col-sm-2">Người tạo</label>
                            <input type="text" class="form-control col-md-4 col-sm-4 text-box-hdmb" asp-for="Nguoilam" id="Nguoilam" disabled>
                        </div>
                        <div class="col-md-4 col-sm-4" style="border: 1px solid; border-color: black;text-align:center">
                            <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px" asp-for="TypeKd" value="0" name="TypeKd" id="TrucTiep" checked disabled><label for="y">Trực tiếp</label>
                            <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px" asp-for="TypeKd" value="1" name="TypeKd" id="UyThac" disabled><label for="y">Ủy thác</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-8 col-sm-8" style="border: 1px solid; border-color: black;text-align:center">
                            <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px " asp-for="MuaBan" id="MUA" value="MUA" name="MuaBan" checked disabled><label for="MUA">Mua hàng</label>
                            <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px " asp-for="MuaBan" id="BAN" value="BAN" name="MuaBan" disabled><label for="BAN">Bán hàng</label>
                        </div>
                        <div class="col-md-4 col-sm-4" style="border: 1px solid; border-color: black;text-align:center">
                            <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px" asp-for="IsFix" value="false" name="IsFix" id="OutRight" checked disabled><label for="OutRight">Giá outright</label>
                            <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px" asp-for="IsFix" value="true" name="IsFix" id="TruLui" disabled><label for="TruLui">Giá trừ lùi</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">System ID</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="Systemref" disabled>

                        <div class="col-md-8 col-sm-8" style="text-align:left">
                            <input type="checkbox" style="margin-right:10px;margin-left:10px" name="@Html.NameFor(a => a.Pakd)" value="true" id="Pakd" disabled>
                            <input type="hidden" name="@Html.NameFor(a => a.Pakd)" value="false" hidden>
                            <label class="col-form-label">Hợp đồng bắt buộc có PAKD</label>
                            <input type="checkbox" style="margin-right: 10px; margin-left: 10px" name="@Html.NameFor(a => a.IsNoKhoDoi)" value="true" id="IsNoKhoDoi" disabled>
                            <input type="hidden" name="@Html.NameFor(a => a.IsNoKhoDoi)" value="false" hidden>
                            <label class="col-form-label">Hợp đồng nợ khó đòi</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Ref</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" asp-for="Ref" id="Ref" disabled>
                        <label class="col-form-label col-md-1 col-sm-1">Số hợp đồng</label>
                        <input type="text" class="form-control col-md-7 col-sm-7 text-box-hdmb" id="Sohd" asp-for="Sohd" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Tiền tệ</label>
                        @(Html.DevExtreme().SelectBoxFor(a => a.Tiente).DataSource(d => d.Mvc().Controller("Lookup")
                                                                            .LoadAction("GetTienTe").LoadMode(DataSourceLoadMode.Raw))
                                                                        .DisplayExpr("Ma").ValueExpr("Ma").ElementAttr("class", "form-control col-md-3 col-sm-3 text-box-hdmb").OnValueChanged("Changed_TienTe").ID("Tiente").Disabled(true))
                        <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="Money" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Khách hàng</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="Makhach" asp-for="Makhach" disabled>
                        <input type="text" class="form-control col-md-5 col-sm-5 text-box-hdmb" id="Tenfull" asp-for="Tenfull" disabled>
                        <label class="col-form-label col-md-1 col-sm-1">V.chuyển</label>
                        <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="VanChuyen" asp-for="VanChuyen" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">INT Ký</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="IntKy" asp-for="IntKy" disabled>
                        <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="Name_IntKy" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Khách ký</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="ClientKy" asp-for="ClientKy" disabled>
                        <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="Name_ClientKy" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Thanh toán</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="Thanhtoan" asp-for="Thanhtoan" disabled>
                        <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="TenTT" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Địa điểm g.h</label>
                        <input type="text" class="form-control col-md-11 col-sm-11 text-box-hdmb" id="DiaDiemGiaoHang" asp-for="DiaDiemGiaoHang" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Mức ứng</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="Mucung" disabled>
                        <label class="col-form-label col-md-auto col-sm-auto">Tạm ứng theo HĐ(FOB)</label>
                        <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="TienUngHd" asp-for="TienUngHd" disabled>
                        <label class="col-form-label col-md-auto col-sm-auto">Tạm ứng thực tế</label>
                        <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="TienUngTt" asp-for="TienUngTt" disabled>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Ngày hđ</label>
                        <div class="col-md-3 col-sm-3 text-box-hdmb">
                            @(Html.DevExtreme().DateBoxFor(a => a.Ngayky).Type(DateBoxType.Date).DisplayFormat("dd/MM/yyyy").ID("Ngayky").Disabled(true).ElementAttr("class", "form-control col-md-3 col-sm-3 text-box-hdmb"))
                        </div>
                        <label class="col-form-label col-md-1 col-sm-1" style="padding-left:0px;padding-right:0px">Ngày g.hàng</label>
                        <div class="col-md-3 col-sm-3 text-box-hdmb">
                            @(Html.DevExtreme().DateBoxFor(a => a.Ngaygiao).Type(DateBoxType.Date).DisplayFormat("dd/MM/yyyy").ID("Ngaygiao").Disabled(true).ElementAttr("class", "form-control col-md-3 col-sm-3 text-box-hdmb"))
                        </div>
                        <label class="col-form-label col-md-1 col-sm-1" style="padding-left:0px;padding-right:0px">Ngày h.lực</label>
                        <div class="col-md-3 col-sm-3 text-box-hdmb">
                            @(Html.DevExtreme().DateBoxFor(a => a.Ngayhl).Type(DateBoxType.Date).DisplayFormat("dd/MM/yyyy").ID("Ngayhl").Disabled(true).ElementAttr("class", "form-control col-md-3 col-sm-3 text-box-hdmb"))
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-1 col-sm-1">Ghi chú</label>
                        <textarea type="text" class="form-control col-md-11 col-sm-11 text-box-hdmb" asp-for="Ghichu" id="Ghichu" disabled></textarea>
                    </div>
                </form>
                @(Html.DevExtreme().DataGrid<CtHdmb>().ID("CtHDMB_dataGrid")
                                    .DataSource(ds => ds.Mvc()
                                        .Controller("Hopdong")
                                        .LoadAction("LoadCtHDMB")
                                        .InsertAction("InsertCtHDMB")
                                        .UpdateAction("UpdateCtHDMB")
                                        .DeleteAction("DeleteCtHDMB")
                                        .Key("IdRow")
                                        .LoadParams(new { id = new JS("GetSystemRef") })
                                    )
                                    .RemoteOperations(true)
                                    .Columns(columns => {

                                        columns.AddFor(m => m.IdRow).Visible(false);

                                        columns.AddFor(m => m.Systemref).Caption("Systemref");

                                        columns.Add().DataField("mahang1").Caption("Mã hàng");

                                        columns.AddFor(m => m.Mahang).Caption("Mã hàng").Visible(false).Lookup(lookup => lookup.DataSource(d => d.Mvc().Controller("lookup")
                                                                                                                                    .LoadAction("LoadMaHangForCtHDMB")
                                                                                                                                    .LoadParams(new { id = new JS("ReturnMaKhach") }))
                                                                                                                                    .DisplayExpr("tenhang")
                                                                                                                                    .ValueExpr("mahang")
                                                                                                                                    .AllowClearing(true))
                                                                                                            .EditCellTemplate(new TemplateName("DropDownBoxTemplate_Hanghoa"));

                                        columns.Add().DataField("Tenhang").Caption("Tên hàng");

                                        columns.AddFor(m => m.Soluong).Caption("Số lượng");

                                        columns.AddFor(m => m.Trongluong).Caption("Trọng lượng");

                                        columns.AddFor(m => m.Dvt).Caption("ĐVT");

                                        columns.AddFor(m => m.Vat).Caption("VAT");

                                        columns.AddFor(m => m.Giact).Caption("Giá");

                                        columns.AddFor(m => m.Giatt).Caption("Giá tạm tính");

                                        columns.AddFor(m => m.Solot).Caption("Số LOT");

                                        columns.AddFor(m => m.Giathang).Caption("Giá tháng");

                                        columns.AddFor(m => m.Gianam).Caption("Giá năm");

                                        columns.AddFor(m => m.Sig).Caption("+ / -");

                                        columns.AddFor(m => m.Diff).Caption("Mức trừ");

                                        columns.AddFor(m => m.FNgayfix).Caption("Ngày chốt");

                                        columns.AddFor(m => m.Stoploss).Caption("Mức stoploss");

                                        columns.Add().DataField("MaNhom").Caption("Mã nhóm");

                                        columns.AddFor(m => m.Giathitruong).Caption("Giá thị trường");

                                        columns.AddFor(m => m.Mucthuong).Caption("Mức thưởng");

                                        columns.AddFor(m => m.GiaTheoHd).Visible(false).Caption("Giá theo hợp đồng");

                                        columns.AddFor(m => m.DvtTheoHd).Visible(false).Lookup(lookup => lookup.DataSource(new JS("DVTTheoHD")).ValueExpr("id").DisplayExpr("name"));

                                    })
                                    .Editing(e => e.Mode(GridEditMode.Popup)
                                        .AllowAdding(true)
                                        .AllowUpdating(true)
                                        .AllowDeleting(true)
                                        .UseIcons(true)
                                        .Popup(p => p
                                            .Title("Chỉnh sửa chi tiết hợp đồng mua bán")
                                            .ShowTitle(true)
                                            .Width(1400)
                                            .Height(450)
                                        )
                                        .Form(f => f.Items(items => {
                                            items.AddGroup()
                                                .ColCount(2)
                                                .ColSpan(2)
                                                .Items(groupItems =>
                                                {
                                                    groupItems.AddSimpleFor(a => a.Mahang).ColSpan(2);

                                                    groupItems.AddSimpleFor(a => a.DvtTheoHd).Editor(editor => editor.SelectBox().DataSource(new JS("DVTTheoHD")).ValueExpr("id").DisplayExpr("name"));

                                                    groupItems.AddSimpleFor(a => a.Vat).Editor(editor => editor.TextBox().ReadOnly(true).ID("Vat_CtHDMB"));

                                                    groupItems.AddSimpleFor(a => a.Soluong);

                                                    groupItems.AddSimpleFor(a => a.Trongluong);

                                                    groupItems.AddSimpleFor(a => a.GiaTheoHd);

                                                    groupItems.AddSimpleFor(a => a.Giact);

                                                    groupItems.AddSimpleFor(a => a.Giathitruong);

                                                    groupItems.AddSimpleFor(a => a.Mucthuong);
                                                });
                                        }))
                                    )
                                    .Export(e => e.Enabled(true))
                                    .FilterRow(filter => filter.Visible(true).ApplyFilter(GridApplyFilterMode.Auto))
                                    .HeaderFilter(hearder => hearder.Visible(true))
                                    .AllowColumnResizing(true)
                                    .AllowColumnReordering(true)
                                    .ColumnAutoWidth(true)
                                    .ColumnChooser(c => c.Enabled(true))
                                    .ColumnFixing(c => c.Enabled(true))
                                    .ShowBorders(true)
                                    .Grouping(group => group.AutoExpandAll(true))
                                    .SearchPanel(searchPanel => searchPanel.Visible(true))
                                    .GroupPanel(groupPanel => groupPanel.Visible(true))
                                    .Paging(paging => paging.PageSize(10))
                                    .Pager(paper =>
                                    {
                                        paper.ShowPageSizeSelector(true);
                                        paper.AllowedPageSizes(new[] { 5, 10, 20 });
                                        paper.ShowInfo(true);
                                    })
                                )
                @using (Html.DevExtreme().NamedTemplate("DropDownBoxTemplate_Hanghoa"))
                {
                    @(Html.DevExtreme().DropDownBox()
                                            .DataSource(d => d.Mvc().Controller("lookup")
                                                    .LoadAction("LoadMaHangForCtHDMB")
                                                    .Key("mahang")
                                                    .LoadParams(new { id = new JS("ReturnMaKhach") }))
                                                    .DisplayExpr("tenhang")
                                                    .ValueExpr("mahang")
                                                    .Value(new JS("value"))

                                            .DisplayExpr("tenhang")
                                            .ValueExpr("mahang")
                                            .Option("setValue", new JS("setValue"))
                                            .ContentTemplate(new TemplateName("ContentTemplate_MaHang"))
                                        )

                }
                @using (Html.DevExtreme().NamedTemplate("ContentTemplate_MaHang"))
                {
                    @(Html.DevExtreme().DataGrid()
                        .DataSource(new JS(@"component.getDataSource()"))
                        .RemoteOperations(true)
                        .Height(250)
                        .Columns(columns => {
                                    columns.Add().DataField("mahang").Caption("Mã hàng");
                                    columns.Add().DataField("tenhang").Caption("Tên hàng");
                                    columns.Add().DataField("dvt").Caption("ĐVT");
                                    columns.Add().DataField("vat").Caption("Vat");
                                    columns.Add().DataField("IsCheck").Caption("IsCheck");
                                    columns.Add().DataField("TLGD").Caption("TLGD");
                                    })
                        .Scrolling(s => s.Mode(GridScrollingMode.Virtual))
                        .HoverStateEnabled(true)
                        .Selection(s => s.Mode(SelectionMode.Single))
                        .SelectedRowKeys(new JS("[component.option('value')]"))
                        .FocusedRowEnabled(true)
                        .FocusedRowKey(new JS("component.option('value')"))
                        .OnSelectionChanged("function(selectionChangedArgs) { onSelectionChanged_ContentTemplate_MaHang(selectionChangedArgs, component) }")
                        .FilterRow(filter => filter.Visible(true).ApplyFilter(GridApplyFilterMode.Auto))
                    )
                }

            </div>
            <div class="col-md-12 col-sm-12" id="leftdiv" style="text-align:center">
                <button type="button" class="btn btn-secondary" id="Button_New" style="font-size:small" onclick="Button_New()">New</button>
                <button type="button" class="btn btn-secondary" id="Button_Edit" style="font-size:small" onclick="Button_Edit()">Edit</button>
                <button type="button" class="btn btn-secondary" id="Button_Cancel" style="font-size:small" onclick="Button_Cancel()">Cancel</button>
                <button type="button" class="btn btn-secondary" style="font-size:small" onclick="ExportWord()">Export word</button>
                <button type="button" class="btn btn-secondary" style="font-size:small" onclick="History_HDMB()">Delivery Detail</button>
                <button type="button" class="btn btn-secondary" style="font-size:small" onclick="AddAnnex()">Add Annex</button>
                <button type="button" class="btn btn-secondary" style="font-size:small" onclick="AddPlans()">Add plan</button>
            </div>
        </div>
    </div>
    <br />
</div>


